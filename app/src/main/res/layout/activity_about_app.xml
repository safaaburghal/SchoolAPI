<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/aboutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layoutAnimation="@anim/layout_fade_in">

        <!-- App Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/school"
            android:contentDescription="App Icon"
            android:layout_marginBottom="16dp" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GLOBAL SCHOOL APP"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#bf8e68"
            android:fontFamily="serif"
            android:layout_marginBottom="4dp" />

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="24dp" />

        <!-- App Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/info"
                android:layout_marginEnd="8dp"
                android:tint="#6cb1c9" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="This app helps manage schedules, assignments, grades, and communication between students, teachers, and registrar efficiently."
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_marginBottom="16dp" />

        <!-- Team Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Development Team"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6cb1c9"
            android:layout_marginBottom="12dp" />

        <!-- Team Members Cards -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/person"
                    android:tint="#6cb1c9"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safaa Burghal"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/person"
                    android:tint="#6cb1c9"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Israa Baraghithi"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/person"
                    android:tint="#6cb1c9"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roa Daraghmeh"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/person"
                    android:tint="#6cb1c9"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rawaa"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



        <!-- Contact Button -->
        <Button
            android:id="@+id/btnContactTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact the Team"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/mail"
            android:backgroundTint="#6cb1c9"
            android:padding="12dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:drawablePadding="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Copyright -->
        <TextView
            android:id="@+id/tvCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2025 School System. All rights reserved."
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="8dp"
            android:textStyle="italic" />

    </LinearLayout>
</ScrollView>
