<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- عنوان الواجهة -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Registrar Dashboard"
            android:textColor="#bf8e68"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- خط فاصل -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="#cccccc" />

        <!-- جملة ترحيبية -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Welcome! Choose a task below to manage students, subjects, and schedules."
            android:textColor="#bf8e68"
            android:textSize="18sp" />

        <!-- الأزرار -->
        <Button
            android:id="@+id/btnAddStudent"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#6cb1c9"
            android:padding="14dp"
            android:text="Add Student"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:drawableLeft="@drawable/person_add"
            android:drawablePadding="10dp" />

        <Button
            android:id="@+id/btnAddSubject"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#6cb1c9"
            android:padding="14dp"
            android:text="Add Subject"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:drawableLeft="@drawable/menu_book"
            android:drawablePadding="10dp" />

        <Button
            android:id="@+id/btnBuildStudentSchedule"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#6cb1c9"
            android:padding="14dp"
            android:text="Build Student Schedule"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:drawableLeft="@drawable/event_note"
            android:drawablePadding="10dp" />

        <Button
            android:id="@+id/btnBuildTeacherSchedule"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#6cb1c9"
            android:padding="14dp"
            android:text="Build Teacher Schedule"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:drawableLeft="@drawable/calendar_today"
            android:drawablePadding="10dp" />

        <Button
            android:id="@+id/btnManageUsers"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6cb1c9"
            android:padding="14dp"
            android:text="Manage Users"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:drawableLeft="@drawable/manage_accounts"
            android:drawablePadding="10dp" />

    </LinearLayout>
</ScrollView>
